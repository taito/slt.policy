<?xml version="1.0"?>
<object name="portal_actions" xmlns:i18n="http://xml.zope.org/namespaces/i18n">

  <object name="object_buttons" meta_type="CMF Action Category">
    <object name="hide_social_buttons" meta_type="CMF Action" i18n:domain="hexagonit.socialbutton" purge="False">
      <property name="permissions">
        <element value="hexagonit.socialbutton: Manage Social Button"/>
      </property>
    </object>
    <object name="show_social_buttons" meta_type="CMF Action" i18n:domain="hexagonit.socialbutton" purge="False">
      <property name="permissions">
        <element value="hexagonit.socialbutton: Manage Social Button"/>
      </property>
    </object>
  </object>


  <object name="user" meta_type="CMF Action Category">

    <object name="dashboard" meta_type="CMF Action">
      <property name="visible">False</property>
    </object>

    <object name="information" meta_type="CMF Action" i18n:domain="slt.policy">
      <property name="title" i18n:translate="">Personal Information</property>
      <property name="description" i18n:translate=""></property>
      <property
      name="url_expr">string:${globals_view/navigationRootUrl}/@@personal-information</property>
      <property name="icon_expr"></property>
      <property name="available_expr">python:member is not None</property>
      <property name="permissions">
        <element value="View"/>
      </property>
      <property name="visible">True</property>
    </object>

    <object name="preferences" meta_type="CMF Action" i18n:domain="plone" purge="False">
      <property name="permissions">
        <element value="slt.theme: View Personal Preferences"/>
      </property>
      <property name="visible">True</property>
    </object>

    <object name="addresses" meta_type="CMF Action" i18n:domain="slt.policy">
      <property name="title" i18n:translate="">Addresses</property>
      <property name="description" i18n:translate=""></property>
      <property
      name="url_expr">string:${portal/portal_membership/getHomeUrl}/@@addresses</property>
      <property name="icon_expr"></property>
      <property name="available_expr">python:member is not None</property>
      <property name="permissions">
        <element value="View"/>
      </property>
      <property name="visible">True</property>
    </object>

    <object name="orders" meta_type="CMF Action" i18n:domain="slt.policy">
      <property name="title" i18n:translate="">Orders</property>
      <property name="description" i18n:translate=""></property>
      <property
      name="url_expr">string:${portal/portal_membership/getHomeUrl}</property>
      <property name="icon_expr"></property>
      <property name="available_expr">python:member is not None</property>
      <property name="permissions">
        <element value="View"/>
      </property>
      <property name="visible">True</property>
    </object>

  </object>

</object>
